<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - Mitchelstown Leisure Centre</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")

</head>
<body style="font-family:Calibri">
    <div class="navbar navbar-inverse navbar-fixed-top">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                @Html.ActionLink("Home", "Index", "Home", new { area = "" }, new { @class = "navbar-brand" })
            </div>
            <div class="navbar-collapse collapse">
                <ul class="nav navbar-nav">
                    @if (User.IsInRole(ProperArch01.Contracts.Constants.RoleNames.AdminName))
                    {
                        <li>@Html.ActionLink("Class Types", "Index", "ClassType")</li>
                        <li>@Html.ActionLink("Timetable", "Index", "ClassTimetable")</li>
                        <li>@Html.ActionLink("Accounts", "Index", "Account")</li>
                        <li>@Html.ActionLink("Holidays", "Index", "Holiday")</li>
                        <li>@Html.ActionLink("Scheduled Classes", "Index", "ScheduledClass")</li>
                        <li>@Html.ActionLink("Attendances", "Index", "ClassAttendance")</li>
                    }
                    else if (User.IsInRole(ProperArch01.Contracts.Constants.RoleNames.AttendeeName))
                    {
                        <li class="dropdown">
                            <a class="dropdown-toggle" data-toggle="dropdown" href="#">About<span class="caret"></span></a>
                            <ul class="dropdown-menu">
                                <li>@Html.ActionLink("Mission/Aim", "MissionAim", "Home")</li>
                                <li>@Html.ActionLink("History", "History", "Home")</li>
                            </ul>
                        </li>
                        <li class="dropdown">
                            <a class="dropdown-toggle" data-toggle="dropdown" href="#">Rates<span class="caret"></span></a>
                            <ul class="dropdown-menu">
                                <li>@Html.ActionLink("Membership Rates", "MembershipRates", "Home")</li>
                                <li>@Html.ActionLink("Corporate Rates", "CorporateRates", "Home")</li>
                                <li>@Html.ActionLink("Pay As You Go", "Payg", "Home")</li>
                                <li>@Html.ActionLink("Room/Facility Rates", "RoomFacilityRates", "Home")</li>
                                <li>@Html.ActionLink("Booking Forms", "BookingForms", "Home")</li>
                            </ul>
                        </li>
                        <li class="dropdown">
                            <a class="dropdown-toggle" data-toggle="dropdown" href="#">Classes<span class="caret"></span></a>
                            <ul class="dropdown-menu">
                                @{
                                    var menu = ViewBag.ClassTypes;
                                    if (menu != null && menu.Count > 0)
                                    {
                                        foreach (var item in menu)
                                        {
                                            <li>@Html.ActionLink($"{item.Name}", $"Details/{item.Id}", "ClassType")</li>
                                        }
                                    }
                                }
                            </ul>
                        </li>
                        <li>@Html.ActionLink("Upcoming Classes", "Index", "ClassAttendance")</li>
                        <li class="dropdown">
                            <a class="dropdown-toggle" data-toggle="dropdown" href="#">Facilities<span class="caret"></span></a>
                            <ul class="dropdown-menu">
                                <li>@Html.ActionLink("Sports Hall", "SportsHall", "Home")</li>
                                <li>@Html.ActionLink("Gym", "Gym", "Home")</li>
                                <li>@Html.ActionLink("Activities Room", "Activities", "Home")</li>
                                <li>@Html.ActionLink("All Weather Pitch", "Pitch", "Home")</li>
                                <li>@Html.ActionLink("Meeting Rooms", "MeetingRooms", "Home")</li>
                            </ul>
                        </li>
                        <li class="dropdown">
                            <a class="dropdown-toggle" data-toggle="dropdown" href="#">Activities<span class="caret"></span></a>
                            <ul class="dropdown-menu">
                                <li>@Html.ActionLink("MLC Class and Timetable", "Index", "ClassTimetable")</li>
                                <li>@Html.ActionLink("Summer Camps", "SummerCamps", "Home")</li>
                                <li>@Html.ActionLink("Birthday Parties", "Birthday", "Home")</li>
                                <li>@Html.ActionLink("Gallery", "Gallery", "Home")</li>
                            </ul>
                        </li>
                        <li>@Html.ActionLink("Contact", "Contact", "Home")</li>
                    }
                    else
                    {
                        <li class="dropdown">
                            <a class="dropdown-toggle" data-toggle="dropdown" href="#">About<span class="caret"></span></a>
                            <ul class="dropdown-menu">
                                <li>@Html.ActionLink("Mission/Aim", "MissionAim", "Home")</li>
                                <li>@Html.ActionLink("History", "History", "Home")</li>
                            </ul>
                        </li>
                        <li class="dropdown">
                            <a class="dropdown-toggle" data-toggle="dropdown" href="#">Rates<span class="caret"></span></a>
                            <ul class="dropdown-menu">
                                <li>@Html.ActionLink("Membership Rates", "MembershipRates", "Home")</li>
                                <li>@Html.ActionLink("Corporate Rates", "CorporateRates", "Home")</li>
                                <li>@Html.ActionLink("Pay As You Go", "Payg", "Home")</li>
                                <li>@Html.ActionLink("Room/Facility Rates", "RoomFacilityRates", "Home")</li>
                                <li>@Html.ActionLink("Booking Forms", "BookingForms", "Home")</li>
                            </ul>
                        </li>
                        <li class="dropdown">
                            <a class="dropdown-toggle" data-toggle="dropdown" href="#">Classes<span class="caret"></span></a>
                            <ul class="dropdown-menu">
                                @{
                                    var menu = ViewBag.ClassTypes;
                                    if (menu != null && menu.Count > 0)
                                    {
                                        foreach (var item in menu)
                                        {
                                            <li>@Html.ActionLink($"{item.Name}", $"Details/{item.Id}", "ClassType")</li>
                                        }
                                    }
                                }
                            </ul>
                        </li>
                        <li class="dropdown">
                            <a class="dropdown-toggle" data-toggle="dropdown" href="#">Facilities<span class="caret"></span></a>
                            <ul class="dropdown-menu">
                                <li>@Html.ActionLink("Sports Hall", "SportsHall", "Home")</li>
                                <li>@Html.ActionLink("Gym", "Gym", "Home")</li>
                                <li>@Html.ActionLink("Activities Room", "Activities", "Home")</li>
                                <li>@Html.ActionLink("All Weather Pitch", "Pitch", "Home")</li>
                                <li>@Html.ActionLink("Meeting Rooms", "MeetingRooms", "Home")</li>
                            </ul>
                        </li>
                        <li class="dropdown">
                            <a class="dropdown-toggle" data-toggle="dropdown" href="#">Activities<span class="caret"></span></a>
                            <ul class="dropdown-menu">
                                <li>@Html.ActionLink("MLC Class and Timetable", "Index", "ClassTimetable")</li>
                                <li>@Html.ActionLink("Summer Camps", "SummerCamps", "Home")</li>
                                <li>@Html.ActionLink("Birthday Parties", "Birthday", "Home")</li>
                                <li>@Html.ActionLink("Gallery", "Gallery", "Home")</li>
                            </ul>
                        </li>
                        <li>@Html.ActionLink("Contact", "Contact", "Home")</li>
                    }
                </ul>
                @Html.Partial("_LoginPartial")
            </div>
        </div>
    </div>
    <div class="container body-content">
        @RenderBody()
        <hr />
        <footer>
            <p>&copy; @DateTime.Now.Year - Mitchelstown Leisure Centre</p>
        </footer>
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @Styles.Render("~/Content/datepicker")
    @Scripts.Render("~/bundles/datePicker")
    @RenderSection("scripts", required: false)
</body>
</html>
