@model ProperArch01.Contracts.Models.ClassAttendance.CreateClassAttendanceViewModel

@{
    ViewBag.Title = "Sign up for class";
}

<h2>Create</h2>


<div>
    <dl class="dl-horizontal">
        <dt>
            Class type:
        </dt>
        <dd>
            @Html.DisplayFor(model => model.ScheduledClassName)
        </dd>
        <dt>
            Starts at:
        </dt>
        <dd>
            @Model.ClassStartTime.DayOfWeek @Html.DisplayFor(model => model.ClassStartTime)
        </dd>
    </dl>
</div>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    @Html.HiddenFor(model => model.ScheduledClassId)
    <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
            <input type="submit" value="Sign up" class="btn btn-default" />
        </div>
    </div>
}

<div>
    @Html.ActionLink("Back to List", "Index")
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
