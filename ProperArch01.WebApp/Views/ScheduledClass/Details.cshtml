@model ProperArch01.Contracts.Models.ScheduledClass.DetailedScheduledClassViewModel

@{
    ViewBag.Title = "Details";
}

<h2>Details</h2>

<div>
    <h4>ScheduledClass</h4>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            @Html.DisplayNameFor(model => model.ClassTypeName)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.ClassTypeName)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.ClassStartTime)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.ClassStartTime)
        </dd>

        @if (!User.IsInRole(ProperArch01.Contracts.Constants.RoleNames.AttendeeName))
        {
            <dt>
                @Html.DisplayNameFor(model => model.IsCancelled)
            </dt>

            <dd>
                @Html.DisplayFor(model => model.IsCancelled)
            </dd>
        }

    </dl>
</div>

@if (User.IsInRole(ProperArch01.Contracts.Constants.RoleNames.AttendeeName))
{
    @Html.ActionLink("Back to manage account", "Index", "Manage")
}
else
{
    <h2>Users signed up for this class</h2>

    @Html.Partial("_Users", Model.Attendances)

    <p>
        @Html.ActionLink("Edit", "Edit", new { id = Model.Id }) |
        @Html.ActionLink("Back to List", "Index")
    </p>
}

