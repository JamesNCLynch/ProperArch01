@model ProperArch01.Contracts.Models.Home.HomeIndexViewModel

@{
    ViewBag.Title = "Home Page";
}

<div id="myCarousel" class="jumbotron carousel slide" data-ride="carousel">
    <ol class="carousel-indicators">
        <li data-target="#myCarousel" data-slide-to="0" class="active"></li>
        <li data-target="#myCarousel" data-slide-to="1"></li>
        <li data-target="#myCarousel" data-slide-to="2"></li>
        <li data-target="#myCarousel" data-slide-to="3"></li>
        <li data-target="#myCarousel" data-slide-to="4"></li>
        <li data-target="#myCarousel" data-slide-to="5"></li>
        <li data-target="#myCarousel" data-slide-to="6"></li>
    </ol>

    <!-- Wrapper for slides -->
    <div class="carousel-inner">
        <div class="item active">
            <img src="../../Assets/HomepageCarousel/mitchelstownleisurecentre-1024x323.jpg" alt="MLC">
            <div class="carousel-caption" style="width: 25%">
                <h3><span class="carousel-mark-blue">GET FIT</span></h3>
                <p><span class="carousel-mark-lightgray">Mitchelstown</span></p>
                <p><span class="carousel-mark-lightgray">Leisure Centre</span></p>
            </div>
        </div>

        <div class="item">
            <img src="../../Assets/HomepageCarousel/mlc_class-1024x323.jpg" alt="Classes">
            <div class="carousel-caption" style="width: 30%">
                <p><span class="carousel-mark-blue">Something for everybody</span></p>
                <h3><span class="carousel-mark-lightgray">FITNESS CLASSES</span></h3>
            </div>
        </div>

        <div class="item">
            <img src="../../Assets/HomepageCarousel/mlc_gym-1-1024x323.jpg" alt="Gym">
            <div class="carousel-caption" style="width: 30%">
                <p><span class="carousel-mark-blue">Fully equipped</span></p>
                <h3><span class="carousel-mark-lightgray">GYM</span></h3>
            </div>
        </div>

        <div class="item">
            <img src="../../Assets/HomepageCarousel/mlc_hall-1024x323.jpg" alt="Hall">
            <div class="carousel-caption" style="width: 30%">
                <p><span class="carousel-mark-blue">State of the art</span></p>
                <h3><span class="carousel-mark-lightgray">SPORTS HALL</span></h3>
            </div>
        </div>

        <div class="item">
            <img src="../../Assets/HomepageCarousel/mlc_astro-1024x323.jpg" alt="Astro">
            <div class="carousel-caption" style="width: 30%">
                <h3><span class="carousel-mark-lightgray">FLOODLIT</span></h3>
                <p><span class="carousel-mark-blue">All-weather pitch</span></p>
            </div>
        </div>

        <div class="item">
            <img src="../../Assets/HomepageCarousel/mlc_birthday-1024x323.jpg" alt="Birthday">
            <div class="carousel-caption" style="width: 40%">
                <p><span class="carousel-mark-blue">Let's party</span></p>
                <h3><span class="carousel-mark-lightgray">MULTI-PURPOSE ROOMS</span></h3>
            </div>
        </div>

        <div class="item">
            <img src="../../Assets/HomepageCarousel/mlc-activities-1024x323.jpg" alt="Choice">
            <div class="carousel-caption" style="width: 40%">
                <p><span class="carousel-mark-blue">It's your choice</span></p>
                <h3><span class="carousel-mark-lightgray">MULTI-PURPOSE ROOMS</span></h3>
            </div>
        </div>


    </div>

    <!-- Left and right controls -->
    <a class="left carousel-control" href="#myCarousel" data-slide="prev">
        <span class="glyphicon glyphicon-chevron-left"></span>
        <span class="sr-only">Previous</span>
    </a>
    <a class="right carousel-control" href="#myCarousel" data-slide="next">
        <span class="glyphicon glyphicon-chevron-right"></span>
        <span class="sr-only">Next</span>
    </a>
</div>

<div class="col-lg-12 col-sm-12 col-md-12" align="center" style="margin: 20px">
    <h2>
        MITCHELSTOWN LEISURE CENTRE
    </h2>
</div>

<div>
    <div class="row" style="display: block; height: 240px">
